<Page
    x:Class="Lively.UI.WinUI.Views.LivelyProperty.LivelyPropertiesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Lively.UI.WinUI.Views.LivelyProperty"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <StackPanel Name="uiPanel" Orientation="Vertical" />
        </ScrollViewer>
        <Button
            Name="restoreDefaultBtn"
            Grid.Row="1"
            Margin="5"
            HorizontalAlignment="Right"
            Click="DefaultBtn_Click"
            ToolTipService.ToolTip="Restore default">
            <FontIcon Glyph="&#xE777;" />
        </Button>
    </Grid>
</Page>
